                return;
            }

            List<string> chatMemberIds = [currentUser.Id, otherUser.Id];
            Chat chosenChat;
            try 
            {
                chosenChat = await chatService.NewUniqueChatFromUserIds(chatMemberIds);
            } 
            catch (InvalidOperationException)
            {
                chosenChat = (await chatService.FindChatFromUserIds(chatMemberIds))!;
            }

            await SelectChat(chosenChat.ChatId);
        }
        else if (chats.Any())
        {
            await SelectChat(chats.First().ChatId);
        }
    }

    private async Task SelectChat(int chatId)
