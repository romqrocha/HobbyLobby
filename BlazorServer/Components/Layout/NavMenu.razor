@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Identity
@using BlazorServer.Data

@rendermode InteractiveServer

@implements IDisposable

@inject NavigationManager NavigationManager
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <a href="search/"><img class="px-3 nav-img" src="img/hobbylobby.svg"/></a>

    <div class="input-group">
        <span class="input-group-text nav-search-bar ms-4 d-flex align-items-center" id="basic-addon1"><span class="bi bi-search"></span></span>
        <input type="text" class="form-control nav-search-bar me-2" placeholder="Search for hobbies..." aria-label="Search"
            aria-describedby="basic-addon1" @onkeydown="HandleKeyDown" @bind-value="SearchText"
            @bind-value:event="oninput">
    </div>

    <AuthorizeView>
        <Authorized>
            @if (showBcitEmailAlert)
            {
                <div class="alert alert-warning alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-5" role="alert" style="z-index: 9999; width: auto;">
                    You must verify with a BCIT email before you can message.
                    <button type="button" class="btn-close" @onclick="() => showBcitEmailAlert = false" aria-label="Close"></button>
                </div>
            }
            
            <div class="nav-item px-3">
                @if (BcitEmailIsVerified)
                {
                    <NavLink class="nav-link" href="messages" Match="NavLinkMatch.All">
                        <span class="bi bi-chat-message-fill-nav-menu" aria-hidden="true"></span>
                    </NavLink>
                }
                else
                {
                    <a class="nav-link" @onclick="HandleMessagesClick" style="cursor: pointer;">
                        <span class="bi bi-chat-message-fill-nav-menu" aria-hidden="true"></span>
                    </a>
                }
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile" Match="NavLinkMatch.All">
                    <span class="bi bi-user-profile-fill-nav-menu" aria-hidden="true"></span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link">
                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                    </button>
                </form>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="d-flex justify-content-end">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</nav>


@code {
    private string? currentUrl;
    private bool BcitEmailIsVerified = false;
    private bool showBcitEmailAlert = false;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
        
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        
        if (user != null)
        {
            BcitEmailIsVerified = user.BcitEmailIsVerified;
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    public string? SearchText { get; set; }

    public void HandleKeyDown(KeyboardEventArgs e)
    {

        if (e.Key == "Enter")
        {
            Console.WriteLine("Search called! For text: " + SearchText);
            NavigationManager.NavigateTo($"search/{SearchText}");
        }
    }

    private void HandleMessagesClick()
    {
        showBcitEmailAlert = true;
        StateHasChanged();
        NavigationManager.NavigateTo("Account/Manage/OrganizationalEmail");
    }
}